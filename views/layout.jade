include mixins

doctype html
html(lang="en")
  head
    title= title
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge' )
    meta( name='viewport', content='width=device-width, initial-scale=1.0' )
    meta( name='description', content='Baking Bootstrap Snippets with Jade' )
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/style.css') 
  body(style="padding-bottom:10rem;")
    .container
      +nav("StandApp")
        +nav_item( "/" ) Home
        +nav_item( "/dashboard/about" ) About
        if user
          +nav_item( "/auth/logout" ) Logout
          +nav_item( "/posts/new" ) Add A Post
          +nav_item( "/users" ) All Users
        else 
          +nav_item( "/auth/linkedin" ) Login
          +nav_item( "/auth/linkedin" ) Add A Post
          +nav_item( "/auth/linkedin" ) All Users
      script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
      script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
      block content 
    
            
              
        
