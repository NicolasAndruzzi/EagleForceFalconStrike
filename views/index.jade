    .col-md-4.col-sm-6.col-xs-12
      +panel("Events", "active")
        .post-container
          each event, i in events
            +post("post", "info")
              .post-style-container
                .heading_container
                  img.profile_pic(src="https://upload.wikimedia.org/wikipedia/commons/7/73/Meetup_Logo_2015.png")
                  h6.user_name= event.name
                  if event.venue
                    p.event_details= event.venue.name
                    p.event_details= event.venue.address_1
                  a(href=event.event_url)
                    h6 Details
