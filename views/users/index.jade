extends ../layout

block content
  div.form
    h1= title
    p Welcome to #{title} 
    table 
     thead 
       tr
         th id
         th first name
         th last name 
         th score 
         th title
         th Admin
     tbody 
     for user in users
       tr 
         td= user.id
         td: a(href='/users/#{user.id}')= user.first_name
         td: a(href='/users/#{user.id}')= user.last_name
         td= user.score
         td= user.title
         td= user.is_admin
