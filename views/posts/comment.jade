extends ../layout

block content
  h1 welcome. now #{title}
  h3 .... #{title}
  h6 no... seriously.  #{title}
  form(action="/posts/#{post.id}/comment" method="post")
    div.form-group
      div
      label(for="subject") Subject
      div
      input.form-control(type="text" id="subject" placeholder="Comment Subject" name="subject")
      div
      label(for="body") Body
      div
      input.form-control(type="text" id="body" placeholder="Comment Body" name="body")
      div
      input.form-control(type="hidden" id="cat_name" value="comment" name="cat_name")
      div
    button.btn.btn-primary(type="submit") Submit 
  
